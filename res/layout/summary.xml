<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/main_menu" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="15px"
            android:layout_height="fill_parent"
            android:layout_weight="0" />



            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/whitebox" 
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoLink="all"
                    android:enabled="true"
                    android:focusable="true"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:textColor="#000000"
                    style="@style/ScaleFontMedium" />
            </ScrollView>


        <TextView
            android:layout_width="15px"
            android:layout_height="fill_parent"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="15px"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/whitebox"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_Summary_nav"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:contentDescription="navigate"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dip"
                android:src="@drawable/nav" />

            <ImageView
                android:id="@+id/iv_Summary_phone"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:contentDescription="Call"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dip"
                android:src="@drawable/phone" />

            <ImageView
                android:id="@+id/iv_Summary_share"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:contentDescription="share"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dip"
                android:src="@drawable/share" />
            
            <ImageView
                android:id="@+id/iv_Summary_calendar"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:contentDescription="share"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dip"
                android:src="@drawable/calendar" />

            <ImageView
                android:id="@+id/iv_Summary_rate"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:contentDescription="rate"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dip"
                android:src="@drawable/rate" />
        </LinearLayout>

        <TextView
            android:layout_width="15px"
            android:layout_height="fill_parent"
            android:layout_weight="0" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="15px"
        android:layout_weight="0" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_Summary_Done"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/blueboxbutton"
            android:text="Finished"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>