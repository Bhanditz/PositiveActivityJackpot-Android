<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/main_menu" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_wheeltopleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/wheeltopleft" />

        <ImageView
            android:id="@+id/list_wheeltop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/wheeltop" />

        <ImageView
            android:id="@+id/list_wheeltopright"
            android:layout_width="76px"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/wheeltoprighthandle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jackpot_wheelleft"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:background="@drawable/wheelleft" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/jackpot_activityWheel1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/jackpot_activityWheel2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/jackpot_activityWheel3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/jackpot_activityWheel4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/jackpot_wheelrighthandle"
            android:layout_width="76px"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:background="@drawable/wheelrighthandle1"
            android:contentDescription="jackpot handle"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jackpot_wheelbottomleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/wheelbottomleft" />

        <ImageView
            android:id="@+id/jackpot_wheelbottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/wheelbottom" />

        <ImageView
            android:id="@+id/jackpot_wheelbottomrighthandle"
            android:layout_width="76px"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/wheelbottomrighthandle" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="35px"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_jackpot_Lock1"
            android:layout_width="52px"
            android:layout_height="52px"
            android:layout_weight="0"
            android:contentDescription="Social Lock"
            android:focusable="true"
            android:background="@drawable/ulock" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_jackpot_Lock2"
            android:layout_width="52px"
            android:layout_height="52px"
            android:layout_weight="0"
            android:contentDescription="Contacts Lock"
            android:focusable="true"
            android:background="@drawable/ulock" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_jackpot_Lock3"
            android:layout_width="52px"
            android:layout_height="52px"
            android:layout_weight="0"
            android:contentDescription="Category Lock"
            android:focusable="true"
            android:background="@drawable/ulock" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_jackpot_Lock4"
            android:layout_width="52px"
            android:layout_height="52px"
            android:layout_weight="0"
            android:contentDescription="Activity Lock"
            android:focusable="true"
            android:background="@drawable/ulock" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="76px"
            android:layout_height="fill_parent"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_jackpot_Summary"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/whitebox"
            android:gravity="center_vertical|center_horizontal"
            android:minLines="2"
            android:scrollbars = "vertical"
            android:singleLine="false"
            android:text="@string/jackpot_summary"
            android:textColor="#000000"
            style="@style/ScaleFontMedium" />

        <TextView
            android:id="@+id/txt_jackpot_Summaryfiller"
            android:layout_width="fill_parent"
            android:layout_height="10px"
            android:layout_weight="0" />

        <Button
            android:id="@+id/btn_jackpot_SelectActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grayboxbutton"
            android:text="@string/jackpot_select"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>